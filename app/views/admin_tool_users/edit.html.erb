	<article class="container_12">
		

		<div class="clear"></div>
    
    <% if notice %>
    <div id="message">
      <ul class="message success grid_12">
			  <li><%= notice %></li>
        <li class="close-bt"></li>
		  </ul>
      <div class="clear"></div>
    </div>   	
    <% end %>
        
    <% if @admin_tool_user.errors.any? %>
    <div id="message">
      <ul class="message error grid_12">
			  <li><%= pluralize(@admin_tool_user.errors.count, "error") %> prohibited this admin user from being saved:</li>
        <% @admin_tool_user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>        
        <li class="close-bt"></li>
		  </ul>
      <div class="clear"></div>
    </div>   	
    <% end %>

    <!-- form -->
		<section class="grid_6">
		  <div class="block-border">  
				<div class="block-content" id="edit_user">			
