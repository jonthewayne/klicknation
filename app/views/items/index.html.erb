	<%= render 'header' %>
    
  <!-- Status bar -->
	<div id="status-bar"><div class="container_12">
	
		<ul id="status-infos">
			<li><a title="Help" class="button" href="mailto:jonthewayne@gmail.com"><span class="smaller">HELP</span></a></li>
      <li><%= link_to '<span class="smaller">MY ACCOUNT</span>'.html_safe, edit_admin_tool_user_path(current_admin_tool_user.id), :class => 'button' %></li>      
      <li><%= link_to '<span class="smaller">LOGOUT</span>'.html_safe, destroy_admin_tool_user_session_path, :class => 'button red' %></li>     
		</ul>
		
		<ul id="breadcrumb">
		  <li></li>
      <li><%= link_to "Production Stock Merit Abilities", items_path %></li>
		</ul>
		<ul id="breadcrumb">
      <li><%= link_to "Pending Stock Merit Abilities", pending_items_path %></li>
		</ul>       
		<ul id="breadcrumb">
      <li><%= link_to "Item Categories", item_categories_path %></li>
		</ul>    
	
	</div></div>
	<!-- End status bar -->
	
	<div id="header-shadow"></div>
	<!-- End header -->	
  
  <!-- Content -->
	<article class="container_12">
		

		<div class="clear"></div>
    
    <% if notice %>
    <div id="message">
      <ul class="message success grid_12">
			  <li><%= notice %></li>
        <li class="close-bt"></li>
		  </ul>
      <div class="clear"></div>
    </div>   	
    <% end %>

		<section class="grid_12">
		  <div class="block-border">  
				<div class="block-content" id="production">			
          <h1>Production<%= link_to image_tag("icons/fugue/plus-circle-blue.png", :size => "16x16", :alt => "Add new merit ability") + " new", new_item_path %></h1>
          <div class="columns">		    	
            <%= render 'production_grid' %>
          </div>          
        </div>
      </div> 
		</section>
    
		<div class="clear"></div>    
    
		<section class="grid_12">
		  <div class="block-border">
		    <div class="block-content" id="pending">  
          <h1>Pending<%= link_to image_tag("icons/fugue/plus-circle-blue.png", :size => "16x16", :alt => "Add new merit ability") + " new", new_item_path %></h1>
          <div class="columns">				
            <%= render 'pending_grid' %>
          </div>
        </div>
      </div>    					  
		</section>    
        
		<div class="clear"></div>        	

    <% if @view_layout == "list" %>
				<div class="no-margin" id="resources">			
          <%=  render 'sections' %>
        </div>  
		<div class="clear"></div>
    <% end %>
		
	</article>









