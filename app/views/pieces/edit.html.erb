	<!-- Status bar -->
	<div id="status-bar"><div class="container_12">
	
		<ul id="status-infos">
			<li><a href="mailto:jonthewayne@gmail.com" class="button" title="Click to get help.">Help</a></li>
		</ul>
		
		<ul id="breadcrumb">
		  <li><a href="#">Klicknation Admin</a></li>
      <li><%= link_to "Game Pieces", pieces_path %></li>
      <li><%= link_to "Editing Game Piece ##{@piece.id}", edit_piece_path(@piece) %></li>      
		</ul>
	
	</div></div>
	<!-- End status bar -->
	
	<div id="header-shadow"></div>
	<!-- End header -->	
  
  <!-- Content -->
	<article class="container_12">
		

		<div class="clear"></div>
    
    <% if notice %>
    <div id="message">
      <ul class="message success grid_12">
			  <li><%= notice %></li>
        <li class="close-bt"></li>
		  </ul>
      <div class="clear"></div>
    </div>   	
    <% end %>
        
    <% if @piece.errors.any? %>
    <div id="message">
      <ul class="message error grid_12">
			  <li><%= pluralize(@piece.errors.count, "error") %> prohibited this piece from being saved:</li>
        <% @piece.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>        
        <li class="close-bt"></li>
		  </ul>
      <div class="clear"></div>
    </div>   	
    <% end %>

    <!-- form -->
		<section class="grid_6">
		  <div class="block-border">  
				<div class="block-content" id="edit_piece">			
          <h1>Game Piece #<%= @piece.id %><%= link_to image_tag("icons/fugue/plus-circle-blue.png", :size => "16x16", :alt => "Add new game piece") + " new", new_piece_path %></a></h1>
          <%= render 'form' %>
        </div>
      </div>    			
		</section>
    
    <!-- game piece image if there is one -->
    <% if @piece.image.url != '/images/icons/fugue/question-white.png' %>
		<section class="grid_6">
		  <div class="block-border"><div class="block-content">  
        <h1>Image</h1>
				<div class="no-margin" id="edit_piece">			
          <%= render 'image' %>
        </div>
      </div></div>    					  
		</section>    
    <% end %>
        
		<div class="clear"></div>      
		  



