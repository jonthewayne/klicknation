<%= form_for @piece, :html => { :multipart => true, :class => "form" } do |f| %>  

  <fieldset>    
      <p>
        <%= f.label :name %>
        <%= f.text_field :name, :class => "full-width" %>
      </p>

      <p>
        <%= f.label :description %>
        <%= f.text_area :description, :class => "full-width" %>
      </p>  
      <p>
        <%= f.label :image %>
        <%= f.file_field :image %>
      </p>
      <div class="columns">
			  <p class="colx2-left">
          <%= f.label :attack %>
          <%= f.text_field :attack %>
				</p>
			  <p class="colx2-right">
          <%= f.label :defense %>
          <%= f.text_field :defense %>
			  </p>
			</div>
      <div class="columns">
			  <p class="colx2-left">
          <%= f.label :movement %>
          <%= f.text_field :movement %>
				</p>
			  <p class="colx2-right">
          <%= f.label :cost %>
          <%= f.text_field :cost %>
			  </p>
			</div>  
      <p><button type="submit">Save Game Piece</button>          
  </fieldset>  
<% end %>		  
