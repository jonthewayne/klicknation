	<!-- Status bar -->
	<div id="status-bar"><div class="container_12">
	
		<ul id="status-infos">
			<li><a href="mailto:jonthewayne@gmail.com" class="button" title="Click to get help.">Help</a></li>
		</ul>
		
		<ul id="breadcrumb">
		  <li><%= link_to "Klicknation Admin", "/" %></li>
      <li><%= link_to "Game Pieces", pieces_path %></li>
		</ul>
	
	</div></div>
	<!-- End status bar -->
	
	<div id="header-shadow"></div>
	<!-- End header -->	
  
  <!-- Content -->
	<article class="container_12">
		

		<div class="clear"></div>
    
    <% if notice %>
    <div id="message">
      <ul class="message success grid_12">
			  <li><%= notice %></li>
        <li class="close-bt"></li>
		  </ul>
      <div class="clear"></div>
    </div>   	
    <% end %>
      	
		<section class="grid_12">
		  
			<%= form_tag pieces_path, :method => 'get', :id => "pieces_search", :class => "block-border form" do %>
				<div class="block-content">
        <h1>Game Pieces<%= link_to image_tag("icons/fugue/plus-circle-blue.png", :size => "16x16", :alt => "Add new game piece") + " new", new_piece_path %></h1>
				
				<div class="block-controls">
					<span id="pagination"><%= render 'pagination' %></span>
					<ul class="controls-buttons">
            <% # will_paginate(@pieces, :container => false, :renderer => PaginationListLinkRenderer, :previous_label => image_tag("icons/fugue/navigation-180.png", :size => "16x16", :alt => "Add new game piece") + " prev", ) %>	  
						<li class="sep"></li>		
						<li><span class="input-type-text margin-right relative"><%= text_field_tag :search, params[:search] %><%= image_tag("icons/fugue/magnifier.png", :size => "16x16", :alt => "Search") %></span></li>					              
					</ul>
				</div>

				<div class="no-margin" id="pieces">			
          <%= render 'pieces' %>
        </div>
				
				<ul class="message no-margin">
					<li><span id="pagination-footer"><%= render 'pagination-footer' %></span></li>
				</ul>
      </div>        
      			
			<% end %>
		</section>

        
		<div class="clear"></div>

		
	</article>









